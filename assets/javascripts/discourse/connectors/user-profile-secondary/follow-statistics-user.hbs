{{#if model.total_following}}
  <FollowStatistic
    @label="user.following.label"
    @total={{model.total_following}}
    @context="profile"
  />
{{/if}}
{{#if model.total_followers}}
  <FollowStatistic
    @label="user.followers.label"
    @total={{model.total_followers}}
    @context="profile"
  />
{{/if}}